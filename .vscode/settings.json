{
    "[lua]": {
        "editor.tabSize": 3,
        "editor.formatOnSave": false,
        "editor.formatOnType": false,
        "editor.defaultFormatter": "Don't format"
    },
    "Lua.diagnostics.globals": [
        "script_description",
        "aegisub",
        "script_name",
        "script_author",
        "script_version",
        "karaskel"
    ],
    "Lua.diagnostics.disable": [
        "cast-local-type",
        "unbalanced-assignments",
        "undefined-global",
        "redundant-parameter",
        "param-type-mismatch",
        "need-check-nil",
        "assign-type-mismatch"
    ]
}